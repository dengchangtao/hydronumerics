<Window x:Class="HydroNumerics.View3d.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="clr-namespace:HelixToolkit;assembly=HelixToolkit" 

        Title="MainWindow" Height="900" Width="905">
    <Grid>
        <Button Content="Load Jupiter" Command="{Binding LoadDatabaseCommand}" Height="27" HorizontalAlignment="Left" Margin="12,12,0,0"  VerticalAlignment="Top" Width="75" />
    
        <helix:HelixView3D Name="view" Margin="222,56,0,0">
            <helix:DefaultLightsVisual3D/>
        </helix:HelixView3D>
        <ListBox ItemsSource="{Binding SortedAndFilteredPlants}" DisplayMemberPath="DisplayName" SelectionChanged="listBox1_SelectionChanged" Height="407" HorizontalAlignment="Left" Margin="12,56,0,0" Name="listBox1" VerticalAlignment="Top" Width="155" />

    </Grid>
</Window>
