<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data" xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="HydroNumerics.Time.Web.MainPage"
    d:DesignWidth="640" d:DesignHeight="480">
  <Grid x:Name="LayoutRoot">

  	<controlsToolkit:DockPanel Margin="5,5,5,5" Grid.Column="2">
  		<data:DataGrid x:Name="TheGrid" ItemsSource="{Binding}" Margin="5,0,0,0" controlsToolkit:DockPanel.Dock="Right" />
  		<chartingToolkit:Chart x:Name="TheChart" Title="{Binding Name}" >
  			<chartingToolkit:LineSeries x:Name="Line1" DependentValuePath="Value" IndependentValuePath="Time" ItemsSource="{Binding items}" controlsToolkit:DockPanel.Dock="Left" IsSelectionEnabled="True"/>
  		</chartingToolkit:Chart>
  	</controlsToolkit:DockPanel>

  </Grid>
</UserControl>
