<Window x:Class="HydroNumerics.MikeSheTools.View.ScreenAdder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add screen to intake" Height="301" Width="243" ResizeMode="NoResize">
    <Grid>
	<DockPanel Margin="10">
	<UniformGrid DockPanel.Dock="Top" Rows="3" Columns="2" Width="205" Height="110" HorizontalAlignment="Left" >
	<Label VerticalAlignment="Center">Intake:</Label>
	<ComboBox x:Name="IntakeSelect" Height="25" ItemsSource="{Binding Intakes}" DisplayMemberPath="IDNumber"></ComboBox>
	<Label VerticalAlignment="Center">Top [m b.g.s.]:</Label>
	<TextBox x:Name="ScreenTop" Height="25"></TextBox>
	<Label VerticalAlignment="Center">Bottom [m b.g.s.]:</Label>
	<TextBox x:Name="ScreenBottom" Height="25"></TextBox>
	</UniformGrid>
	<Label DockPanel.Dock="Top">Comment:</Label>
	
	<StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,5,0,0" HorizontalAlignment="Right">
	<Button HorizontalAlignment="Right" Width="50" Click="Button_Click">OK</Button>
	<Button HorizontalAlignment="Right" Width="50" Margin="5,0,0,0" IsCancel="True">Cancel</Button>
	</StackPanel>
	<TextBox x:Name="CommentText"  DockPanel.Dock="Top"/>
    </DockPanel>
		
    </Grid>
</Window>
