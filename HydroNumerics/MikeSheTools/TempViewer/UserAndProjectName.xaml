<Window x:Class="TempViewer.UserAndProjectName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User and project name?" Height="200" Width="250">
    <Grid>
        <StackPanel Margin="10">
        <UniformGrid Rows="2" Columns="2" Height="75">
            <Label>User name:</Label>
            <TextBox x:Name="UserName" Height="25"></TextBox>
            <Label>Project name:</Label>
            <TextBox x:Name="ProjectName" Height="25"></TextBox>
        </UniformGrid>
            <StackPanel Orientation="Horizontal"  Margin="0,40,0,0" HorizontalAlignment="Right">
                <Button HorizontalAlignment="Right" Width="50" Click="Button_Click">OK</Button>
                <Button HorizontalAlignment="Right" Width="50" Margin="5,0,0,0" IsCancel="True">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
