<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit" x:Class="HydroNumerics.MikeSheTools.View.M11View"
    Title="M11View" Height="574" Width="608">
	<Grid>
		<StackPanel Margin="10,10,0,0" >
			<StackPanel Orientation="Horizontal">
				<Label Content="Sim11 Filename:"/>
				<TextBox Width="264" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding Sim11FileName}"/>
				<Button Width="24" Content="..." Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" Click="Button_Click" />
			</StackPanel>
			<Label Content="Branches"/>
			<DockPanel>
				<Custom:DataGrid x:Name="BranchList" ItemsSource="{Binding Branches}"/>
				<Custom:DataGrid DataContext="{Binding ElementName=BranchList, Path=SelectedItems}" ItemsSource="{Binding CrossSections}"/>
			</DockPanel>
		</StackPanel>
	</Grid>
</Window>
