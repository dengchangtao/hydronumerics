<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System_Windows_Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit" xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="HydroNumerics.HydroNet.View.Chart"
     mc:Ignorable="d">
    <DockPanel>
    	<System_Windows_Controls:Accordion DockPanel.Dock="Right" Margin="5,0,0,0" Width="69">
    		<System_Windows_Controls:AccordionItem x:Name="SeriesItem" Header="Series">
			<Grid>
				<CheckBox Content="Series1" d:LayoutOverrides="Width, Height"/>
			</Grid>
			</System_Windows_Controls:AccordionItem>
    		<System_Windows_Controls:AccordionItem Header="Axes">
			<Grid>
				<CheckBox Content="Normalize" d:LayoutOverrides="Width, Height"/>
			</Grid>
			</System_Windows_Controls:AccordionItem>
    	</System_Windows_Controls:Accordion>
    	<chartingToolkit:Chart DockPanel.Dock="Left" x:Name="TheChart" d:LayoutOverrides="Width, Height">
    	</chartingToolkit:Chart>
            
    </DockPanel>
</UserControl>
